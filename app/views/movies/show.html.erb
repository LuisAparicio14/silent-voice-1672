<h1><%= @movie.title %></h1>
<p><strong>Creation Year:</strong> <%= @movie.creation_year %></p>
<p><strong>Genre:</strong> <%= @movie.genre %></p>

<h2>Actors:</h2>
<ul>
  <% @actors.each do |actor| %>
    <li><%= actor.name %> - <%= actor.age %> years old</li>
  <% end %>
</ul>

<p><strong>Average Age of Actors:</strong> <%= @average_age %></p>

<h2>Add an actor</h2>
<%= form_with url: "/movies/#{@movie.id}", method: :patch  do |f| %>
    <%= f.label :actor_id %>
    <%= f.text_field :actor_id %>

  <%= f.submit "Add Actor"%>
<% end %>